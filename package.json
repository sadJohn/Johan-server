  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.5",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
